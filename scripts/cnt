# Source helper functions
source ndm_functions

program=$(basename $0)
while true
do
	case $1 in
		-h|--help)
			echo "usage: $program [file1 file2...]"
			echo " count unique existing files (or directories) among listed names"
			exit $NO_ERROR
			;;
		*)
			break
			;;
	esac
done

if [ $# -eq 0 ]
then
	ls [0-9]* 2>/dev/null | wc -l
else
	ls $* 2>/dev/null|sort|uniq|wc -l
# 	echo $#
fi

